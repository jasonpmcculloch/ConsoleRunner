<Window x:Class="ConsoleRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConsoleRunner"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ToolBar x:Name="toolBar" Height="30" VerticalAlignment="Top" Margin="10,0,10.4,0">
            <Button Content="Run..." Click="Button_Click"/>
        </ToolBar>
        <TextBox x:Name="textBox" Margin="10,35,10.4,9.8" TextWrapping="Wrap" FontFamily="Courier New" FontSize="10.667" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>

    </Grid>
</Window>
